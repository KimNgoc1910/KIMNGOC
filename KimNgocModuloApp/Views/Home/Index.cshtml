@{
    ViewData["Title"] = "Bài Toán Nghịch Đảo Và Số Âm Modulo";
}
@{
    Layout = "_Layout";
}
<div class="container mt-5">
    <div class="text-center mb-4">
        <h2>@ViewData["Title"]</h2>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header text-center">
                    <strong>Tính toán Nghịch đảo và Số âm Modulo</strong>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Calculate">
                        <div class="mb-3">
                            <label for="number" class="form-label">Nhập số:</label>
                            <input type="number" id="number" name="number" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label for="modulo" class="form-label">Nhập modulo (m>1):</></label>
                            <input type="number" id="modulo" name="modulo" class="form-control" />
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Tính toán</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @if (ViewData["Result"] != null)
    {
        <div class="alert alert-info mt-4">
            <strong>Kết quả:</strong> @Html.Raw(ViewData["Result"])
        </div>
    }
</div>
